Excercise 4:
 a/ A square
     //     fd(100)
     //     rt(90)
     //     fd(100)
     //     rt(90)fd(100)
     //     rt(90)fd(100)
     //     rt(90)
 b/ An equilateral triangle
     rt(30)
     fd(100)
     rt(120)
     fd(100)
     rt(120)
     fd(100)
 c/ A circle 
     for(let i=0;i<=360;i++){
         fd(1)
         rt(1)
     }
 d/ Multi-circles 
    for(let i=0;i<90;i++){
         rt(3)
         for(let i=0;i<=360;i++){
             fd(1)
             rt(1)
     }
    }



